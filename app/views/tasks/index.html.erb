<h1 class="m-3">My tasks</h1>

<ul class="list-group my-4"><% @tasks.each do |task| %>
  <li class="list-group-item">
    <% if task.completed %>
      <i class="fa-solid fa-square-check"></i>
    <% else %>
      <i class="fa-regular fa-square"></i>
    <% end %>
    <%=link_to task.title, task_path(task)%>: <%=task.details%>
    <%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>
<%= link_to "+ Add a new task", new_task_path, class: "ms-4" %>
